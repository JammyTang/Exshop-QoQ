        "  new.loc[i, '月份'] = s\n",
        "\n",
        "# 將月份欄位移到最前面\n",
        "col = new.pop('月份')\n",
        "new.insert(loc = 0, column = '月份', value = col)\n",
        "\n",
        "# 加入第一列 2023 Q3\n",
        "q_new = input('本季(ex.2023 Q3)：')\n",
        "new.insert(0, \"銷售季度\", f\"{q_new}\", True)\n",
        "\n",
        "\n",
        "# 輸出合併後的檔案\n",
        "your_path = \"/content/drive/MyDrive/exshop/QoQ/data/\"\n",
        "new.to_csv(f\"{your_path}new.csv\", index = False) #index: 列標籤是否要輸出"
